<section class="page-recettes section-layout">
  <div class="list-recettes">
    {% for recette in recettes %}
      {% if (app.user) or not recette.isPremium %}
        <div class="recette-card">
          <img src="/assets/imgs/recipe/{{ recette.image }}">
          <p class="title">{{ recette.title }}</p>
          <p class="info">Temps de pr√©paration : {{ recette.makingTime | date('H:i') }}</p>
          <p class="info">Calories : {{ recette.calories }} pour 100g</p>
          <a class="btn btn-peach" href="/recipe/{{ recette.id }}">Voir la recette</a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>